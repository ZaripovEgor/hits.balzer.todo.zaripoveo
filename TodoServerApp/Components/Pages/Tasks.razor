@page "/"
@rendermode InteractiveServer
@inject IDataService data
@attribute [Authorize]


<PageTitle>Задачи</PageTitle> 
<h1>Мои задачи</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ИД</th>
            <th>Заголовок</th>
            <th>Описание</th>
            <th>Создано</th>
            <th>Завершено</th>
        </tr>
    </thead>
    <tbody>
        @if(tasks == null)
        {
            <tr>
                <td colspan="5">
                    Loading ...
                </td>
            </tr>
        }
        else
        {
            @foreach (var t in tasks)
            {
                <tr>
                    <td>@t.Id</td>
                    <td>@t.Title</td>
                    <td>@t.Description</td>
                    <td>@t.CreatedDate</td>
                    <td>@t.FinishDate</td>
                </tr>
            }
        }  
    </tbody>
</table>

@code {
    IEnumerable<TaskItem>? tasks;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        tasks = await data.GetTaskItemAsync();
    }
}